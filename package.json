{
    "name": "trustee-backend",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "services/*",
        "resources/*",
        "packages/*"
    ],
    "scripts": {
        "migration:generate": "drizzle-kit generate:mysql",
        "migration:push": "drizzle-kit push:mysql",
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@serverless/compose": "^1.3.0",
        "@types/uuid": "^9.0.2",
        "drizzle-kit": "^0.19.5",
        "eslint-config-custom": "*",
        "prettier": "latest",
        "turbo": "latest"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "@planetscale/database": "^1.8.0",
        "@types/aws-lambda": "^8.10.110",
        "@types/node": "^18.14.0",
        "@types/validatorjs": "^3.15.0",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "aws-lambda": "^1.0.7",
        "bcryptjs": "^2.4.3",
        "drizzle-orm": "^0.27.2",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "mysql2": "^3.5.1",
        "serverless": "^3.32.1",
        "serverless-webpack": "^5.11.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.4.0",
        "ts-results": "^3.3.0",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.9.5",
        "uuid": "^9.0.0",
        "validatorjs": "^3.22.1",
        "webpack": "^5.75.0"
    },
    "packageManager": "npm@8.15.0"
}
